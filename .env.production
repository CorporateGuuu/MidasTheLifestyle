# Security
BCRYPT_ROUNDS=12
SESSION_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]
CORS_ORIGIN=https://midasthelifestyle.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
