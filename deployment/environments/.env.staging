# Staging Environment Configuration for Midas The Lifestyle
# Pre-production testing environment with production-like settings

# Application Environment
NODE_ENV=staging
REACT_APP_ENVIRONMENT=staging

# API Configuration
REACT_APP_API_URL=/.netlify/functions
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# Database Configuration (for Netlify Functions)
MONGODB_URI=mongodb+srv://staging-user:${MONGODB_PASSWORD_STAGING}@midas-staging.mongodb.net/midas_staging?retryWrites=true&w=majority
MONGODB_DB_NAME=midas_staging
MONGODB_CONNECTION_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=30000
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=1

# Authentication & Security
JWT_SECRET=${JWT_SECRET_STAGING}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=${SESSION_SECRET_STAGING}

# Google OAuth Configuration
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID_STAGING}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET_STAGING}
GOOGLE_REDIRECT_URI=https://midasthelifestyle-staging.netlify.app/auth/google/callback

# Payment Processing (Test Mode)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_STAGING}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_STAGING}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET_STAGING}
PAYPAL_CLIENT_ID=${PAYPAL_CLIENT_ID_STAGING}
PAYPAL_CLIENT_SECRET=${PAYPAL_CLIENT_SECRET_STAGING}
PAYPAL_MODE=sandbox

# Email Services
SENDGRID_API_KEY=${SENDGRID_API_KEY_STAGING}
SENDGRID_FROM_EMAIL=staging@midasthelifestyle.com
SENDGRID_FROM_NAME=Midas The Lifestyle (Staging)
MAILGUN_API_KEY=${MAILGUN_API_KEY_STAGING}
MAILGUN_DOMAIN=${MAILGUN_DOMAIN_STAGING}

# SMS Services
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID_STAGING}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN_STAGING}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER_STAGING}

# File Storage
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_STAGING}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_STAGING}
AWS_REGION=us-east-1
AWS_S3_BUCKET=midas-staging-assets
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME_STAGING}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY_STAGING}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET_STAGING}

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID_STAGING}
GOOGLE_TAG_MANAGER_ID=${GOOGLE_TAG_MANAGER_ID_STAGING}
SENTRY_DSN=${SENTRY_DSN_STAGING}
SENTRY_ENVIRONMENT=staging
DATADOG_API_KEY=${DATADOG_API_KEY_STAGING}
DATADOG_APP_KEY=${DATADOG_APP_KEY_STAGING}

# Performance & Caching
REDIS_URL=${REDIS_URL_STAGING}
REDIS_PASSWORD=${REDIS_PASSWORD_STAGING}
CACHE_TTL=1800
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200

# Business Configuration
BUSINESS_NAME=Midas The Lifestyle (Staging)
BUSINESS_EMAIL=staging@midasthelifestyle.com
BUSINESS_PHONE_UAE=+971585531029
BUSINESS_PHONE_USA=+12403510511

# Feature Flags
FEATURE_REAL_TIME_BOOKING=true
FEATURE_GUEST_BOOKING=true
FEATURE_MULTI_CURRENCY=true
FEATURE_CALENDAR_SYNC=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_LOYALTY_PROGRAM=true

# Security Settings
CORS_ORIGIN=https://midasthelifestyle-staging.netlify.app
ALLOWED_ORIGINS=https://midasthelifestyle-staging.netlify.app
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict
CSRF_PROTECTION=true
HELMET_ENABLED=true

# Logging & Debugging
LOG_LEVEL=debug
DEBUG_MODE=true
VERBOSE_LOGGING=true
ERROR_REPORTING=true

# Performance Optimization
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
CACHE_STATIC_ASSETS=true
CDN_ENABLED=false
IMAGE_OPTIMIZATION=true
LAZY_LOADING=true

# Testing Configuration
TEST_MODE=true
MOCK_PAYMENTS=true
MOCK_SMS=true
MOCK_EMAIL=false
SEED_DATA=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Staging environment - for testing purposes only
MAINTENANCE_ALLOWED_IPS=

# Content Management
CONTENT_CACHE_TTL=1800
IMAGE_CACHE_TTL=43200
STATIC_CACHE_TTL=86400
DYNAMIC_CONTENT_TTL=300
