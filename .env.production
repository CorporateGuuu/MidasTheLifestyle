ETHEREUM_RPC_URL_PRODUCTION=[CONFIGURE_IN_NETLIFY]
BITCOIN_RPC_URL_PRODUCTION=[CONFIGURE_IN_NETLIFY]

# Business Configuration
COMPANY_NAME=Midas The Lifestyle
COMPANY_EMAIL=concierge@midasthelifestyle.com
COMPANY_PHONE_USA=+1 240 351 0511
COMPANY_PHONE_UAE=+971 58 553 1029
COMPANY_ADDRESS=1234 Luxury Lane, Washington, DC 20001

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_LOYALTY_PROGRAM=true
FEATURE_VIRTUAL_TOURS=true
FEATURE_BLOCKCHAIN_VERIFICATION=true
FEATURE_CRYPTO_PAYMENTS=true
FEATURE_ADVANCED_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
