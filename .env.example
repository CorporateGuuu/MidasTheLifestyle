# Midas Lifestyle Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Email Configuration for Form Processing
# Use Gmail App Password or SMTP credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Netlify Configuration
# These are set automatically by Netlify
NETLIFY_SITE_ID=your-site-id
NETLIFY_ACCESS_TOKEN=your-access-token

# Optional: Database Configuration (for future use)
DATABASE_URL=your-database-connection-string

# Payment Processing - Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Payment Processing - PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Services - Backup Providers
SENDGRID_API_KEY=your-sendgrid-api-key
MAILGUN_SMTP_USER=your-mailgun-smtp-user
MAILGUN_SMTP_PASS=your-mailgun-smtp-password

# Monitoring and Error Tracking
SENTRY_WEBHOOK_URL=https://your-sentry-webhook-url
DATADOG_WEBHOOK_URL=https://your-datadog-webhook-url
LOGROCKET_WEBHOOK_URL=https://your-logrocket-webhook-url
MONITORING_WEBHOOK_URL=https://your-monitoring-webhook-url

# API Keys for Monitoring Services
SENTRY_API_KEY=your-sentry-api-key
DATADOG_API_KEY=your-datadog-api-key
LOGROCKET_API_KEY=your-logrocket-api-key

# Alert Notifications
ALERT_EMAIL_ENDPOINT=https://your-alert-email-endpoint
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Security and Authentication
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# SMS and Communication
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_BUSINESS_API_KEY=your-whatsapp-api-key

# Application Configuration
NODE_ENV=development
DEBUG=true
URL=https://midasthelifestyle.netlify.app
