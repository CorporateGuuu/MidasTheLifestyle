# Midas Lifestyle Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Email Configuration for Form Processing
# Use Gmail App Password or SMTP credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Netlify Configuration
# These are set automatically by Netlify
NETLIFY_SITE_ID=your-site-id
NETLIFY_ACCESS_TOKEN=your-access-token

# Optional: Database Configuration (for future use)
DATABASE_URL=your-database-connection-string

# Optional: External API Keys (for future integrations)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Optional: Third-party Service Keys
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Development Settings
NODE_ENV=development
DEBUG=true
