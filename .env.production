# Production Environment Variables for Midas The Lifestyle
# Configure these in Netlify Dashboard under Site Settings > Environment Variables

# Application Configuration
NODE_ENV=production
MIDAS_ENV=production
SITE_URL=https://midasthelifestyle.com
API_BASE_URL=https://midasthelifestyle.com/api

# Database Configuration
MONGODB_URI_PRODUCTION=mongodb+srv://[CONFIGURE_IN_NETLIFY]
REDIS_URL_PRODUCTION=redis://[CONFIGURE_IN_NETLIFY]

# Authentication
JWT_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]
JWT_EXPIRES_IN=24h
GOOGLE_CLIENT_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
GOOGLE_CLIENT_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]
GOOGLE_REDIRECT_URI=https://midasthelifestyle.com/auth/google/callback

# Payment Processing
STRIPE_PUBLISHABLE_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
STRIPE_SECRET_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
STRIPE_WEBHOOK_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]
PAYPAL_CLIENT_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
PAYPAL_CLIENT_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]
PAYPAL_MODE=live

# Email Services
SENDGRID_API_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
SENDGRID_FROM_EMAIL=concierge@midasthelifestyle.com
SENDGRID_FROM_NAME=Midas The Lifestyle Concierge
MAILGUN_API_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
MAILGUN_DOMAIN_PRODUCTION=[CONFIGURE_IN_NETLIFY]

# SMS Services
TWILIO_ACCOUNT_SID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
TWILIO_AUTH_TOKEN_PRODUCTION=[CONFIGURE_IN_NETLIFY]
TWILIO_PHONE_NUMBER_PRODUCTION=[CONFIGURE_IN_NETLIFY]

# File Storage
AWS_ACCESS_KEY_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
AWS_SECRET_ACCESS_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
AWS_REGION=us-east-1
AWS_BUCKET=midas-production-assets
CLOUDINARY_CLOUD_NAME_PRODUCTION=[CONFIGURE_IN_NETLIFY]
CLOUDINARY_API_KEY_PRODUCTION=[CONFIGURE_IN_NETLIFY]
CLOUDINARY_API_SECRET_PRODUCTION=[CONFIGURE_IN_NETLIFY]

# Monitoring & Analytics
SENTRY_DSN_PRODUCTION=[CONFIGURE_IN_NETLIFY]
SENTRY_ENVIRONMENT=production
GOOGLE_ANALYTICS_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
GOOGLE_TAG_MANAGER_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
HOTJAR_SITE_ID_PRODUCTION=[CONFIGURE_IN_NETLIFY]
